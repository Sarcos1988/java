package hola.mundo;

public class Metodos {
	
	public int posicionDia(String nombre, String[] dias) {
		
		int posicion = 0;
		for (int i = 0; i < dias.length; i++)
		{
			if (nombre.equalsIgnoreCase(dias[i])) 
			{
				System.out.printf("El nombre %s se encuentra en el arreglo", nombre);
				posicion = i;
				break;
			}
		}
		return posicion;
		
	}
	

}
